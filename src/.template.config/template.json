{
  "$schema": "http://json.schemastore.org/template",
  "author": "Microsoft",
  "classifications": [ "Console", "AI", "MCP", "Server" ],
  "identity": "Microsoft.MCP.Csharp.10.0",
  "groupIdentity": "Microsoft.MCP",
  "name": "MCP Server",
  "shortName": "mcp-server",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "description": "A project template for creating a Model Context Protocol (MCP) server using C# and the ModelContextProtocol package.",
  "sourceName": "McpServerTemplate",
  "preferNameDirectory": true,
  "guids": [
    "34C5A090-0A21-44D8-874B-20331FE427B3"
  ],
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net8.0",
          "description": "Target .NET 8.0"
        },
        {
          "choice": "net9.0",
          "description": "Target .NET 9.0"
        },
        {
          "choice": "net10.0",
          "description": "Target .NET 10.0"
        }
      ],
      "defaultValue": "net10.0",
      "replaces": "net10.0"
    },
    "TransportMethod": {
      "type": "parameter",
      "datatype": "choice",
      "description": "The transport method to use for the MCP server.",
      "displayName": "Transport Method",
      "choices": [
        {
          "choice": "streamable-http",
          "description": "Streamable HTTP transport",
          "displayName": "Remote (streamable-http)"
        },
        {
          "choice": "stdio",
          "description": "Standard Input/Output (stdio) transport",
          "displayName": "Local (stdio)"
        }
      ],
      "defaultValue": "stdio"
    },
    "EnableOpenTelemetry": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Enable OpenTelemetry for tracing and metrics",
      "defaultValue": "false",
      "isEnabled": "(TransportMethod == \"streamable-http\")"
    },
    "EnableAspire": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Enable Aspire integration",
      "defaultValue": "true",
      "isEnabled": "(TransportMethod == \"streamable-http\")"
    },
    "SkipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(TransportMethod == \"stdio\")",
          "exclude": [
            "McpServerTemplate/Properties/**"
          ]
        },
        {
          "condition": "(EnableAspire == false)",
          "exclude": [
            "AspireAppHost/**",
            "McpServerTemplate.AppHost/**",
            "McpServerTemplate.slnx"
          ]
        }
      ]
    }
  ],
  "primaryOutputs": [
    { "path": "McpServerTemplate.AppHost/McpServerTemplate.AppHost.csproj" },
    { "path": "Directory.Packages.props" },
    { "path": "McpServerTemplate/McpServerTemplate.csproj" },
    { "path": "McpServerTemplate.slnx" }
  ],
  "defaultName": "McpServer",
  "postActions": [
    {
      "condition": "(!SkipRestore)",
      "description": "Restore NuGet packages required by this project.",
      "manualInstructions": [
        { "text": "Run 'dotnet restore'" }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    },
    {
      "id": "set-startup-project",
      "description": "Sets the startup project in the solution",
      "manualInstructions": [],
      "actionId": "5BECCC32-4D5A-4476-A0F9-BD2E81AF0689",
      "condition": "(hostIdentifier == \"vs\")",
      "args": {
        "projects": "0"
      }
    }
  ]
}
